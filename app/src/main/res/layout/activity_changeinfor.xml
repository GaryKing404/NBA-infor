<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_infor"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/xui_config_color_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原密码："
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
        android:id="@+id/password_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入原密码"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:pet_enableIconAlpha="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新密码："
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
        android:id="@+id/password_new1"
        fontPath="fonts/Roboto-Thin.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="输入新密码"
        android:inputType="textPassword"
        app:pet_enableIconAlpha="true"
        app:pet_hoverShowsPw="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认新密码："
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
        android:id="@+id/password_new2"
        fontPath="fonts/Roboto-Thin.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="输入新密码"
        android:inputType="textPassword"
        app:pet_enableIconAlpha="true"
        app:pet_hoverShowsPw="true" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/psw_change"
        style="@style/InfoItem"
        android:layout_marginTop="26dp"
        app:sCenterTextColor="@color/xui_config_color_blue"
        app:sCenterTextString="确认修改"
        android:onClick="Change"
        app:sDividerLineType="none" />


</LinearLayout>